{
  "$id": "https://schemas.ory.sh/presets/kratos/identity.service_account.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Service Account",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "service_name": {
          "type": "string",
          "title": "Service Name",
          "minLength": 3,
          "maxLength": 64,
          "pattern": "^[a-z0-9][a-z0-9-]*[a-z0-9]$",
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              }
            }
          }
        },
        "description": {
          "type": "string",
          "title": "Description",
          "maxLength": 500
        },
        "owner_email": {
          "type": "string",
          "format": "email",
          "title": "Owner Email",
          "ory.sh/kratos": {
            "verification": {
              "via": "email"
            },
            "recovery": {
              "via": "email"
            }
          }
        },
        "environment": {
          "type": "string",
          "title": "Environment",
          "enum": ["development", "staging", "production"],
          "default": "development"
        },
        "scopes": {
          "type": "array",
          "title": "Scopes",
          "items": {
            "type": "string",
            "enum": ["read", "write", "admin", "api:full", "api:readonly"]
          },
          "default": ["read"]
        },
        "allowed_ips": {
          "type": "array",
          "title": "Allowed IP Addresses",
          "items": {
            "type": "string"
          }
        },
        "rate_limit": {
          "type": "integer",
          "title": "Rate Limit (requests/minute)",
          "minimum": 1,
          "maximum": 10000,
          "default": 1000
        },
        "expires_at": {
          "type": "string",
          "title": "Expiration Date",
          "format": "date"
        },
        "auto_renew": {
          "type": "boolean",
          "title": "Auto Renew",
          "default": false
        },
        "metadata": {
          "type": "object",
          "title": "Custom Metadata",
          "properties": {
            "team": {
              "type": "string",
              "title": "Team"
            },
            "project": {
              "type": "string",
              "title": "Project"
            },
            "cost_center": {
              "type": "string",
              "title": "Cost Center"
            }
          }
        }
      },
      "required": ["service_name", "owner_email"],
      "additionalProperties": false
    }
  }
}
